{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "process": true,
        "require": true,
        "module": true
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.d.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "@typescript-eslint"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ]
        }
    ]
}