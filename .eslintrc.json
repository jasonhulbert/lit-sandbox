{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "rules": { },
    "globals": {
        "process": true,
        "require": true,
        "module": true
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.d.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "lit",
                "@typescript-eslint"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:lit/recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended",
                "plugin:prettier/recommended"
            ]
        }
    ]
}